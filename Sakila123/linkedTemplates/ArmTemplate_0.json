														"type": "Expression"
													}
												}
											},
											{
												"name": "from_csv_to_sql",
												"type": "ExecuteDataFlow",
												"dependsOn": [
													{
														"activity": "Set variable2",
														"dependencyConditions": [
															"Succeeded"
														]
													}
												],
